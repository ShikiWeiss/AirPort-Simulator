<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Airport.Design" 
                    xmlns:conv="clr-namespace:Airport.Design.Converters">

    <conv:StationIdToStringConverter x:Key="StationIdToString" />
    <conv:StationTypeToColorConverter x:Key="StationTypeToColor"/>
    <conv:StationPlaneStatusToStringConverter x:Key="StationPlaneStatusToString"/>
    <conv:PlaneToImageConverter x:Key="PlaneToImage"/>

    <BitmapImage x:Key="PlaneIcon" UriSource="https://img.icons8.com/ios/344/airplane-mode-on--v1.png"/>
    <BitmapImage x:Key="TakeoffIcon" UriSource="https://img.icons8.com/ios-filled/240/000000/airplane-take-off.png"/>


    <Style TargetType="TextBlock">
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>
    <Style TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>
    <Style TargetType="ListView">
        <Setter Property="ScrollViewer.IsEnabled" Value="True"/>
    </Style>

</ResourceDictionary>